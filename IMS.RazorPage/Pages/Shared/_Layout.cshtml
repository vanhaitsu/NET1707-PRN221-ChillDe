<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IMS.RazorPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IMS.RazorPage.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            margin: 0;
            background-color: #f8f9fa; /* Light background for the entire page */
        }

        .sidebar {
            width: 250px;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40; /* Dark background for the sidebar */
            overflow-y: auto;
            padding-top: 20px;
            transition: width 0.3s ease; /* Smooth transition for sidebar width */
            z-index: 1000; /* Ensure sidebar stays above content */
        }

            .sidebar a {
                padding: 12px 15px;
                text-decoration: none;
                display: block;
                color: #ffffff; /* White text */
                transition: background-color 0.3s ease; /* Smooth transition for background color */
            }

                .sidebar a:hover {
                    background-color: #495057; /* Darker background on hover */
                }

            .sidebar .navbar-brand {
                font-weight: bold;
                color: #ffffff;
                padding: 20px 0;
                text-decoration: none;
                display: block;
                text-align: center;
                margin-bottom: 20px;
                border-bottom: 1px solid #495057; /* Border under navbar brand */
            }

        .btn-primary {
            background-color: blue !important; /* Override Bootstrap's default */
            color: #ffffff !important; /* Ensure text is visible */
        }

        .content {
            margin-left: 250px; /* Space for sidebar */
            padding: 20px;
            flex-grow: 1;
        }

            .content h1 {
                font-size: 2rem;
                margin-bottom: 20px;
            }
    </style>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="sidebar">
            <a id="navbar-brand-link" class="navbar-brand" href="#">Intern Management System</a>
            @if (User.IsInRole("Admin"))
            {
                <a class="" asp-area="" asp-page="/Admin/Account">Account</a>
                <a class="" asp-area="" asp-page="/Admin/Intern">Intern</a>
                <a class="text-danger" asp-area="" asp-page="/Common/Logout">Logout</a>
            }
            @if (User.IsInRole("HR"))
            {
                <a class="" asp-area="" asp-page="/HR/Campaign">Campaign</a>
                <a class="" asp-area="" asp-page="/HR/Interview">Interview</a>
                <a class=" text-danger" asp-area="" asp-page="/Common/Logout">Logout</a>
            }
            @if (User.IsInRole("Mentor"))
            {
                <a class="" asp-area="" asp-page="/Mentor/TrainingProgramList">Program</a>
                <a class="text-danger" asp-area="" asp-page="/Common/Logout">Logout</a>
            }
            @if (User.IsInRole("Intern"))
            {
                <a class="" asp-area="" asp-page="/Intern/Campaign">Campaign</a>
                <a class="" asp-area="" asp-page="/Intern/DashBoard">Dashboard</a>
                <a class="text-danger" asp-area="" asp-page="/Common/Logout">Logout</a>
            }
        </div>
    }
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
