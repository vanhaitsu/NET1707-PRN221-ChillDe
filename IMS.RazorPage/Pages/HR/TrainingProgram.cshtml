@* @page
@model IMS.RazorPage.Pages.Mentor.TrainingProgramModel
@{
}
<div class="align-content-center">
    <div class="d-flex justify-content-center">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCreateProgram">
            Create new program
        </button>
    </div>

    <div class="modal fade" id="modalCreateProgram" tabindex="-1" aria-labelledby="modalCreateProgramLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Create new program</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-page-handler="CreateProgram" class="d-flex flex-column gap-4">
                        <div class="alert alert-danger" role="alert" asp-validation-summary="ModelOnly"></div>
                        <div class="form-floating">
                            <input asp-for="TrainingProgramCreateModel.Code" type="text" class="form-control" id="floatingInput" placeholder="" />
                            <label asp-for="TrainingProgramCreateModel.Code" for="floatingInput"></label>
                            <span asp-validation-for="TrainingProgramCreateModel.Code" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="TrainingProgramCreateModel.Name" type="tel" class="form-control" id="floatingInput" placeholder="" />
                            <label asp-for="TrainingProgramCreateModel.Name" for="floatingInput"></label>
                            <span asp-validation-for="TrainingProgramCreateModel.Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="TrainingProgramCreateModel.Duration" type="number" class="form-control" id="floatingInput" placeholder="" />
                            <label asp-for="TrainingProgramCreateModel.Duration" for="floatingInput"></label>
                            <span asp-validation-for="TrainingProgramCreateModel.Duration" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="TrainingProgramCreateModel.Password" type="text" class="form-control" id="floatingInput" placeholder="" />
                            <label asp-for="TrainingProgramCreateModel.Password" for="floatingInput"></label>
                            <span asp-validation-for="TrainingProgramCreateModel.Password" class="text-danger"></span>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    @if (Model.TrainingPrograms != null && Model.TrainingPrograms.Count > 0)
    {
        <div class="container mt-5">
            <div class="row mb-4">
                <div class="col">
                    <h2 class="text-center">Training Programs Overview</h2>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            Training Programs List
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                @foreach (var trainingProgram in Model.TrainingPrograms)
                                {
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between" onclick="redirectToProgramDetail('@trainingProgram.Id')">
                                            <div>
                                                <h5 class="mb-1">@trainingProgram.Name (@trainingProgram.Code)</h5>
                                                <p class="mb-1"><strong>Status:</strong> @trainingProgram.Status</p>
                                                <p class="mb-1">
                                                    <strong>Creation Date:</strong>
                                                    @if (trainingProgram.CreatedDate.HasValue)
                                                    {
                                                        @trainingProgram.CreatedDate.Value.ToShortDateString()
                                                    }
                                                    else
                                                    {
                                                        <span>N/A</span>
                                                    }
                                                </p>
                                            </div>
                                            <div class="align-self-center">
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script>
        function redirectToProgramDetail(ProgramId) {
            window.location.href = `/Mentor/TrainingProgramDetail?programId=${ProgramId}`;
        }
    </script>
}
