@page
@model IMS.RazorPage.Pages.Mentor.InternModel
@{
    @using System.Security.Claims
    @using IMS.Repositories.Models.InternModel
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Trainee Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    @{
        var internList = ViewData["Interns"] as List<InternGetModel>;
        var internUpdate = Model.internUpdate;
        var newIntern = Model.intern;
        int totalInternsCount = ViewData["TotalInternsCount"] as int? ?? 0;
        int pageSize = Model.PageSize;
        int totalPages = (int)Math.Ceiling((decimal)totalInternsCount / pageSize);
    }

    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-6">
                <form action="./Intern" method="get">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search" aria-label="Recipient's username" aria-describedby="button-addon2" name="SearchTerm">
                        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="m-4">
        @if (internList != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Code</th>
                        <th scope="col">Full name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var intern in internList)
                    {
                        var modalId = $"modal-{intern.Id}";
                        <tr>
                            <th scope="row">@(internList.IndexOf(intern) + 1)</th>
                            <td>@intern.FullName</td>
                            <td>@intern.Email</td>
                            <td>@(intern.IsDelete.HasValue ? (intern.IsDelete.Value ? "Inactive" : "Active") : "Unknown")</td>
                            <td>
                                <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#@modalId">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                            </td>
                            <td>
                                @if (intern.IsDelete.HasValue)
                                {
                                    if (intern.IsDelete.Value)
                                    {
                                        <form method="post" asp-page-handler="Restore" asp-route-id="@intern.Id">
                                            <button type="submit" class="btn btn-success">UnBlock</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" asp-page-handler="Block" asp-route-id="@intern.Id">
                                            <button type="submit" class="btn btn-danger">Block</button>
                                        </form>
                                    }
                                }
                            </td>
                        </tr>
                        <!-- Modal Edit -->
                        <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@modalId-Label" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="@modalId-Label">Edit intern</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form method="post">
                                            <div class="mb-3">
                                                <label for="basic-url-@intern.Id" class="form-label" asp-for="@internUpdate.FullName">Full Name</label>
                                                <input type="text" value="@intern.FullName" class="form-control" id="basic-url-@intern.Id" aria-describedby="basic-addon3" asp-for="@internUpdate.FullName">
                                                <span asp-validation-for="@internUpdate.FullName" class="text-danger"></span>
                                            </div>
                                            <div class="mb-3">
                                                <label for="basic-url-email-@intern.Id" class="form-label" asp-for="@internUpdate.Email">Email</label>
                                                <input type="text" value="@intern.Email" class="form-control" id="basic-url-email-@intern.Id" asp-for="@internUpdate.Email">
                                                <span asp-validation-for="@internUpdate.Email" class="text-danger"></span>
                                            </div>

                                            <div class="mb-3">
                                                <label for="basic-url-address-@intern.Id" class="form-label" asp-for="@internUpdate.Address">Address</label>
                                                <input type="text" value="@intern.Address" class="form-control" id="basic-url-address-@intern.Id" asp-for="@internUpdate.Address">
                                                <span asp-validation-for="@internUpdate.Address" class="text-danger"></span>
                                            </div>
                                           @*  <div class="mb-3">
                                                <label for="basic-url-university-@intern.Id" class="form-label" asp-for="@internUpdate.University">University</label>
                                                <input type="text" value="@intern.University" class="form-control" id="basic-url-university-@intern.Id" asp-for="@internUpdate.University">
                                                <span asp-validation-for="@internUpdate.University" class="text-danger"></span>
                                            </div> *@
                                            <div class="d-flex">
                                                <div class="mb-3 col-5">
                                                    <label class="form-label" asp-for="@internUpdate.PhoneNumber">Phone</label>
                                                    <input type="text" value="@intern.PhoneNumber" class="form-control" id="basic-url-phone-@intern.Id" aria-describedby="basic-addon3 basic-addon4" asp-for="@internUpdate.PhoneNumber">
                                                    <span asp-validation-for="@internUpdate.PhoneNumber" class="text-danger"></span>
                                                </div>

                                                <div class="mb-3 col-5">
                                                    <label class="form-label" asp-for="@internUpdate.DOB">Birthday</label>
                                                    <input type="text" value="@intern.DOB?.ToString("dd-MM-yyyy")" class="form-control" id="basic-url-dob-@intern.Id" aria-describedby="basic-addon3 basic-addon4" asp-for="@internUpdate.DOB">
                                                    <span asp-validation-for="@internUpdate.DOB" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="d-flex">
                                                <div class="mb-3 col-5">
                                                    <label class="form-label" asp-for="@internUpdate.Gender">Gender</label>
                                                    <select class="form-select" value="@intern.Gender" aria-label="Default select example" asp-for="@internUpdate.Gender">
                                                        <option value="Male">Male</option>
                                                        <option value="Female">Female</option>
                                                    </select>
                                                    <span asp-validation-for="@internUpdate.Gender" class="text-danger"></span>
                                                </div>

                                               @*  <div class="mb-3 col-5">
                                                    <label class="form-label" asp-for="internUpdate.ProgramId">Training Program</label>
                                                    <select class="form-select" asp-for="internUpdate.ProgramId">
                                                        if (ViewData["Programs"] != null)
                                                        {
                                                        @foreach (var program in (List<TrainingProgram>)ViewData["Programs"])
                                                        {
                                                            if (intern != null && intern.ProgramId == program.Id)
                                                            {
                                                                <option value="@program.Id" selected>@program.Name</option>
                                                            }

                                                        }
                                                    </select>
                                                    <span asp-validation-for="internUpdate.ProgramId" class="text-danger"></span>
                                                </div> *@
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        }
    </div>

    <div class="m-auto">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-page="./Intern" asp-route-SearchTerm="@Model.SearchTerm" asp-route-PageNumber="@(Model.PageNumber - 1)" asp-route-PageSize="@Model.PageSize">Previous</a>
                </li>
                @for (var i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                        <a class="page-link" asp-page="./Intern" asp-route-SearchTerm="@Model.SearchTerm" asp-route-PageNumber="@i" asp-route-PageSize="@Model.PageSize">@i</a>
                    </li>
                }
                <li class="page-item @(Model.PageNumber >= totalPages ? "disabled" : "")">
                    <a class="page-link" asp-page="./Intern" asp-route-SearchTerm="@Model.SearchTerm" asp-route-PageNumber="@(Model.PageNumber + 1)" asp-route-PageSize="@Model.PageSize">Next</a>
                </li>
            </ul>
        </nav>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
