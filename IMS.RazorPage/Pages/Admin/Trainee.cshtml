@page
@using System.Security.Claims
@using IMS.Models.Entities
@using Model.ViewModels.TraineeModel
@model TraineeManagementModel
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Trainee Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    @{
        var traineeList = ViewData["Trainees"] as List<TraineeGetModel>;
        var traineeUpdate = Model.traineeUpdate;
        var newTrainee = Model.trainee;
        int totalTraineesCount = ViewData["TotalTraineesCount"] as int? ?? 0;
        int pageSize = Model.PageSize;
        int totalPages = (int)Math.Ceiling((decimal)totalTraineesCount / pageSize);
    }

    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-6">
                <form action="./Trainee" method="get">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search" aria-label="Recipient's username" aria-describedby="button-addon2" name="SearchTerm">
                        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#modalAddTrainee">
        <i class="bi bi-plus-circle"></i> Add Trainee
    </button>

    <div class="container mt-3">
        <div class="row">
            <div class="col-3">
                <form method="post" asp-page-handler="Upload" enctype="multipart/form-data" class="mb-3">
                    <div class="input-group">
                        <button type="submit" class="btn btn-primary">Upload</button>
                        <input type="file" name="file" class="form-control" accept=".xlsx">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Modal upload file -->
    <div class="modal fade" id="uploadedTraineesModal" tabindex="-1" aria-labelledby="uploadedTraineesModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="uploadedTraineesModalLabel">Confirm Uploaded Trainees</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>University</th>
                                <th>Phone Number</th>
                                <th>DOB</th>
                                <th>Gender</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.UploadedTrainees != null)
                            {
                                @foreach (var trainee in Model.UploadedTrainees)
                                {
                                    <tr>
                                        <td>@trainee.FullName</td>
                                        <td>@trainee.Email</td>
                                        <td>@trainee.Address</td>
                                        <td>@trainee.University</td>
                                        <td>@trainee.PhoneNumber</td>
                                        <td>@trainee.DOB.ToString("dd-MM-yyyy")</td>
                                        <td>@trainee.Gender</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8">No trainees uploaded.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <form method="post" asp-page-handler="Confirm">
                        <button type="submit" class="btn btn-primary">Confirm</button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var shouldShowModal = @(Model.UploadedTrainees != null && Model.UploadedTrainees.Count > 0 ? "true" : "false");

                if (shouldShowModal) {
                    var uploadedTraineesModal = new bootstrap.Modal(document.getElementById('uploadedTraineesModal'));
                    uploadedTraineesModal.show();
                }
            });
        </script>
    }

    <div class="m-4">
        @if (traineeList != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Code</th>
                        <th scope="col">Full name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var trainee in traineeList)
                    {
                        var modalId = $"modal-{trainee.Id}";
                        <tr>
                            <th scope="row">@(traineeList.IndexOf(trainee) + 1)</th>
                            <td>@trainee.Code</td>
                            <td>@trainee.FullName</td>
                            <td>@trainee.Email</td>
                            <td>@(trainee.IsDelete.HasValue ? (trainee.IsDelete.Value ? "Inactive" : "Active") : "Unknown")</td>
                            <td>
                                <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#@modalId">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                            </td>
                            <td>
                                @if (trainee.IsDelete.HasValue)
                                {
                                    if (trainee.IsDelete.Value)
                                    {
                                        <form method="post" asp-page-handler="Restore" asp-route-id="@trainee.Id">
                                            <button type="submit" class="btn btn-success">UnBlock</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" asp-page-handler="Block" asp-route-id="@trainee.Id">
                                            <button type="submit" class="btn btn-danger">Block</button>
                                        </form>
                                    }
                                }
                            </td>
                        </tr>
                        <!-- Modal Edit -->
                        <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@modalId-Label" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="@modalId-Label">Edit Trainee</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form method="post">
                                            <div class="mb-3">
                                                <label for="basic-url-@trainee.Id" class="form-label" asp-for="@traineeUpdate.FullName">Full Name</label>
                                                <input type="text" value="@trainee.FullName" class="form-control" id="basic-url-@trainee.Id" aria-describedby="basic-addon3" asp-for="@traineeUpdate.FullName">
                                                <span asp-validation-for="@traineeUpdate.FullName" class="text-danger"></span>
                                            </div>
                                            <div class="mb-3">
                                                <label for="basic-url-email-@trainee.Id" class="form-label" asp-for="@traineeUpdate.Email">Email</label>
                                                <input type="text" value="@trainee.Email" class="form-control" id="basic-url-email-@trainee.Id" asp-for="@traineeUpdate.Email">
                                                <span asp-validation-for="@traineeUpdate.Email" class="text-danger"></span>
                                            </div>

                                            <div class="mb-3">
                                                <label for="basic-url-address-@trainee.Id" class="form-label" asp-for="@traineeUpdate.Address">Address</label>
                                                <input type="text" value="@trainee.Address" class="form-control" id="basic-url-address-@trainee.Id" asp-for="@traineeUpdate.Address">
                                                <span asp-validation-for="@traineeUpdate.Address" class="text-danger"></span>
                                            </div>
                                            <div class="mb-3">
                                                <label for="basic-url-university-@trainee.Id" class="form-label" asp-for="@traineeUpdate.University">University</label>
                                                <input type="text" value="@trainee.University" class="form-control" id="basic-url-university-@trainee.Id" asp-for="@traineeUpdate.University">
                                                <span asp-validation-for="@traineeUpdate.University" class="text-danger"></span>
                                            </div>
                                            <div class="d-flex">
                                                <div class="mb-3 col-5">
                                                    <label class="form-label" asp-for="@traineeUpdate.PhoneNumber">Phone</label>
                                                    <input type="text" value="@trainee.PhoneNumber" class="form-control" id="basic-url-phone-@trainee.Id" aria-describedby="basic-addon3 basic-addon4" asp-for="@traineeUpdate.PhoneNumber">
                                                    <span asp-validation-for="@traineeUpdate.PhoneNumber" class="text-danger"></span>
                                                </div>

                                                <div class="mb-3 col-5">
                                                    <label class="form-label" asp-for="@traineeUpdate.DOB">Birthday</label>
                                                    <input type="text" value="@trainee.DOB?.ToString("dd-MM-yyyy")" class="form-control" id="basic-url-dob-@trainee.Id" aria-describedby="basic-addon3 basic-addon4" asp-for="@traineeUpdate.DOB">
                                                    <span asp-validation-for="@traineeUpdate.DOB" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="d-flex">
                                                <div class="mb-3 col-5">
                                                    <label class="form-label" asp-for="@traineeUpdate.Gender">Gender</label>
                                                    <select class="form-select" value="@trainee.Gender" aria-label="Default select example" asp-for="@traineeUpdate.Gender">
                                                        <option value="Male">Male</option>
                                                        <option value="Female">Female</option>
                                                    </select>
                                                    <span asp-validation-for="@traineeUpdate.Gender" class="text-danger"></span>
                                                </div>

                                                <div class="mb-3 col-5">
                                                    <label class="form-label" asp-for="traineeUpdate.ProgramId">Training Program</label>
                                                    <select class="form-select" asp-for="traineeUpdate.ProgramId">
                                                        if (ViewData["Programs"] != null)
                                                        {
                                                        <option value="">Not assigned program</option>
                                                        @foreach (var program in (List<TrainingProgram>)ViewData["Programs"])
                                                        {
                                                            if (trainee != null && trainee.ProgramId == program.Id)
                                                            {
                                                                <option value="@program.Id" selected>@program.Name</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@program.Id">@program.Name</option>
                                                            }
                                                        }
                                                    </select>
                                                    <span asp-validation-for="traineeUpdate.ProgramId" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="submit" asp-route-id="@trainee.Id" class="btn btn-primary">Save changes</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        }
    </div>

    <!-- Modal Add -->
    <div class="modal fade" id="modalAddTrainee" tabindex="-1" aria-labelledby="modalAddTraineeLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalAddTraineeLabel">Add Trainee</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-page-handler="Create">
                        <div class="mb-3">
                            <label class="form-label" asp-for="newTrainee.FullName">Full Name</label>
                            <input type="text" class="form-control" id="newTrainee.FullName" asp-for="newTrainee.FullName">
                            <span asp-validation-for="newTrainee.FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="newTrainee.Email">Email</label>
                            <input type="email" class="form-control" id="newTrainee.Email" asp-for="newTrainee.Email">
                            <span asp-validation-for="newTrainee.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="newTrainee.Address">Address</label>
                            <input type="text" class="form-control" id="newTrainee.Address" asp-for="newTrainee.Address">
                            <span asp-validation-for="newTrainee.Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="newTrainee.University">University</label>
                            <input type="text" class="form-control" id="newTrainee.University" asp-for="newTrainee.University">
                            <span asp-validation-for="newTrainee.University" class="text-danger"></span>
                        </div>

                        <div class="d-flex">
                            <div class="mb-3 col-5">
                                <label class="form-label" asp-for="newTrainee.PhoneNumber">Phone</label>
                                <input type="text" class="form-control" id="newTrainee.PhoneNumber" asp-for="newTrainee.PhoneNumber">
                                <span asp-validation-for="newTrainee.PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="mb-3 col-5">
                                <label class="form-label" asp-for="newTrainee.DOB">Birthday</label>
                                <input type="date" class="form-control" id="newTrainee.DOB" asp-for="newTrainee.DOB">
                                <span asp-validation-for="newTrainee.DOB" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex">
                            <div class="mb-3 col-5">
                                <label class="form-label" asp-for="newTrainee.Gender">Gender</label>
                                <select class="form-select" asp-for="newTrainee.Gender">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <span asp-validation-for="newTrainee.Gender" class="text-danger"></span>
                            </div>

                            <div class="mb-3 col-5">
                                <label class="form-label" asp-for="newTrainee.ProgramId">Training Program</label>
                                <select class="form-select" asp-for="newTrainee.ProgramId">
                                    @if (ViewData["Programs"] != null)
                                    {
                                        @foreach (var program in (List<TrainingProgram>)ViewData["Programs"])
                                        {
                                            <option value="@program.Id">@program.Name</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="">No Program available</option>
                                    }
                                </select>
                                <span asp-validation-for="newTrainee.ProgramId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" asp-page-handler="Add" class="btn btn-primary">Create Trainee</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="m-auto">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Page("/Trainee", new { SearchTerm = Model.SearchTerm, PageNumber = Model.PageNumber - 1, PageSize = Model.PageSize })">Previous</a>
                </li>
                @for (var i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                        <a class="page-link" href="@Url.Page("/Trainee", new { SearchTerm = Model.SearchTerm, PageNumber = i, PageSize = Model.PageSize })">@i</a>
                    </li>
                }
                <li class="page-item @(Model.PageNumber >= totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Page("/Trainee", new { SearchTerm = Model.SearchTerm, PageNumber = Model.PageNumber + 1, PageSize = Model.PageSize })">Next</a>
                </li>
            </ul>
        </nav>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
