@page
@model IMS.RazorPage.Pages.SignUpModel
@{
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    @{
        var intern = Model.internRegister;
        var message = Model.Message;
    }

    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
        <div class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true" id="errorMessage" data-bs-delay="5000">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["ErrorMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
        <div class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true" id="successMessage" data-bs-delay="5000">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["SuccessMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <form method="post">
        <section class="vh-100">
            <div class="container-fluid h-custom h-100">
                <div class="row d-flex justify-content-center align-items-stretch h-100">
                    <div class="col-12 text-center text-lg-start d-flex flex-column align-items-center">
                        <p class="fw-bold mt-2 pt-1 mb-0 text-center" style="font-size: 1.5rem; margin-bottom: 20px;">
                            Register to become an intern
                        </p>
                        <p class="small fw-bold mt-2 pt-1 mb-0 text-center">
                            Already have an account? <a href="/Index" class="link-primary-emphasis">Login</a>
                        </p>
                    </div>
                    <div class="col-md-8 col-lg-8 col-xl-4 d-flex flex-column align-items-stretch">
                        <!-- Email input -->
                        <div class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <input class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="internRegister.Email" />
                                <label asp-for="internRegister.Email" for="floatingInput">Email address</label>
                                <span asp-validation-for="internRegister.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Full Name input -->
                        <div class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <input class="form-control" id="floatingInput" placeholder="Full name" asp-for="internRegister.FullName" />
                                <label asp-for="internRegister.FullName" for="floatingInput">Full name</label>
                                <span asp-validation-for="internRegister.FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <input class="form-control" type="password" id="floatingInput" placeholder="Password" asp-for="internRegister.Password" />
                                <label asp-for="internRegister.Password" for="floatingInput">Password</label>
                                <span asp-validation-for="internRegister.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Confirm Password input -->
                        <div class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <input class="form-control" type="password" id="floatingInput" placeholder="Confirm Password" asp-for="internRegister.ConfirmPassword" />
                                <label asp-for="internRegister.ConfirmPassword" for="floatingInput">Confirm Password</label>
                                <span asp-validation-for="internRegister.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Education input -->
                        <div class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <input class="form-control" id="floatingInput" placeholder="Education" asp-for="internRegister.Education" />
                                <label asp-for="internRegister.Education" for="floatingInput">Education</label>
                                <span asp-validation-for="internRegister.Education" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Skill input -->
                        <div class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <input class="form-control" id="floatingInput" placeholder="Skill" asp-for="internRegister.Skill" />
                                <label asp-for="internRegister.Skill" for="floatingInput">Skill</label>
                                <span asp-validation-for="internRegister.Skill" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8 col-lg-8 col-xl-4 d-flex flex-column align-items-stretch">
                        <!-- Phone Number input -->
                        <div class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <input class="form-control" id="floatingInput" placeholder="Phone Number" asp-for="internRegister.PhoneNumber" />
                                <label asp-for="internRegister.PhoneNumber" for="floatingInput">Phone Number</label>
                                <span asp-validation-for="internRegister.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Date of Birth input -->
                        <div class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <input class="form-control" type="date" id="floatingInput" placeholder="Birthday" asp-for="internRegister.DOB" />
                                <label asp-for="internRegister.DOB" for="floatingInput">Birthday</label>
                                <span asp-validation-for="internRegister.DOB" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Gender input -->
                        <div class="form-outline mb-2">
                            <div class="form-floating mb-3 p-lg-3 d-flex justify-content-around">
                                <div class="form-group">
                                    <input class="form-check-input" type="radio" value="Male" id="flexRadioDefault1" asp-for="internRegister.Gender">
                                    <label class="form-check-label" for="flexRadioDefault1">Male</label>
                                </div>
                                <div class="form-group">
                                    <input class="form-check-input" type="radio" value="Female" id="flexRadioDefault2" asp-for="internRegister.Gender">
                                    <label class="form-check-label" for="flexRadioDefault2">Female</label>
                                </div>
                                <span asp-validation-for="internRegister.Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Address input -->
                        <div class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <input class="form-control" id="floatingInput" placeholder="Address" asp-for="internRegister.Address" />
                                <label asp-for="internRegister.Address" for="floatingInput">Address</label>
                                <span asp-validation-for="internRegister.Address" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Work History input -->
                        <div class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <textarea class="form-control" id="floatingInput" placeholder="Work History" asp-for="internRegister.WorkHistory"></textarea>
                                <label asp-for="internRegister.WorkHistory" for="floatingInput">Work History</label>
                                <span asp-validation-for="internRegister.WorkHistory" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="text-center text-lg-start d-flex flex-column align-items-center mt-4">
                        <button type="submit" id="submitBtn" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Register
                        </button>
                    </div>
                </div>
            </div>
        </section>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            const message = message;
            if (message) {
                const toastLiveExample = document.getElementById('messageToast');
                const toast = new bootstrap.Toast(toastLiveExample);
                toast.show();
            }
        });
    </script>
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            var errorMessage = document.getElementById('errorMessage');
            var successMessage = document.getElementById('successMessage');
            if (errorMessage && errorMessage.querySelector('.toast-body').textContent.trim() !== '') {
                new bootstrap.Toast(errorMessage).show();
            }
            if (successMessage && successMessage.querySelector('.toast-body').textContent.trim() !== '') {
                new bootstrap.Toast(successMessage).show();
            }
        });
    </script>
</body>
</html>