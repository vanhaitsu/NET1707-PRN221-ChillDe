@page
@model IMS.RazorPage.Pages.SignUpModel
@{
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    @{
        var account = Model.account;
        var message = Model.Message;
    }
    <div class="toast align-items-center bg-success text-light fs-6 border-0" role="alert" aria-live="assertive" aria-atomic="true" id="messageToast" data-bs-delay="5000" data-bs-autohide="true"
         style="position: fixed; top: 1rem; right: 1rem; z-index: 1100;">
        <div class="d-flex">
            <div class="toast-body">
                message
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>

    <form method="post">
        <section class="vh-100">
            <div class="container-fluid h-custom h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="text-center text-lg-start d-flex flex-column align-items-center">
                        <p class="fw-bold mt-2 pt-1 mb-0 text-center" style="font-size: 1.5rem; margin-bottom: 20px;">
                            Welcome back
                        </p>
                        <p class="small fw-bold mt-2 pt-1 mb-0 text-center">
                            Already have an account? <a href="/Home/Login"
                                                        class="link-primary-emphasis">Login</a>
                        </p>
                    </div>
                    <div class="col-md-8 col-lg-8 col-xl-4">
                        <div data-mdb-input-init class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <input class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="@account.Email" />
                                <label asp-for="@account.Email" for="floatingInput">Email address</label>
                                <span asp-validation-for="@account.Email" class="text-danger"></span>
                            </div>

                            <div data-mdb-input-init class="form-outline mb-2">
                                <div class="form-group form-floating mb-3">
                                    <input class="form-control" id="floatingInput" placeholder="Full name" asp-for="@account.FullName" />
                                    <label asp-for="@account.FullName" for="floatingInput">Full name</label>
                                    <span asp-validation-for="@account.FullName" class="text-danger"></span>
                                </div>
                            </div>

                            

                            <div data-mdb-input-init class="form-outline mb-2">
                                <div class="form-group form-floating mb-3">
                                    <input class="form-control" type="password" id="floatingInput" placeholder="Password" asp-for="@account.Password" />
                                    <label asp-for="@account.Password" for="floatingInput">Password</label>
                                    <span asp-validation-for="@account.Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div data-mdb-input-init class="form-outline mb-2">
                                <div class="form-group form-floating mb-3">
                                    <input class="form-control" type="password" id="floatingInput" placeholder="ConfirmPassword" asp-for="@account.ConfirmPassword" />
                                    <label asp-for="@account.ConfirmPassword" for="floatingInput">ConfirmPassword</label>
                                    <span asp-validation-for="@account.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-8 col-lg-8 col-xl-4 offset-xl-1">
                        <div data-mdb-input-init class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <input class="form-control" id="floatingInput" placeholder="PhoneNumber" asp-for="@account.PhoneNumber" />
                                <label asp-for="@account.PhoneNumber" for="floatingInput">PhoneNumber</label>
                                <span asp-validation-for="@account.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <input class="form-control" type="date" id="floatingInput" placeholder="Birthday" asp-for="@account.DOB" />
                                <label asp-for="@account.DOB" for="floatingInput">Birthday</label>
                                <span asp-validation-for="@account.DOB" class="text-danger"></span>
                            </div>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-2">
                            <div class="form-floating mb-3 p-lg-3 d-flex justify-content-around">
                                <div class="form-group">
                                    <input class="form-check-input" type="radio" value="Male" id="flexRadioDefault1" asp-for="@account.Gender">
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        Male
                                    </label>
                                </div>
                                <div class="form-group">
                                    <input class="form-check-input" type="radio" value="Female" id="flexRadioDefault2" asp-for="@account.Gender">
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        Female
                                    </label>
                                </div>
                                <span asp-validation-for="@account.Gender" class="text-danger"></span>
                            </div>
                        </div>


                        <div data-mdb-input-init class="form-outline mb-2">
                            <div class="form-group form-floating mb-3">
                                <input class="form-control" id="floatingInput" placeholder="Birthday" asp-for="@account.Address" />
                                <label asp-for="@account.Address" for="floatingInput">Address</label>
                                <span asp-validation-for="@account.Address" class="text-danger"></span>
                            </div>
                        </div>



                    </div>
                    <div class="text-center text-lg-start d-flex flex-column align-items-center">
                        <button type="submit" id="submitBtn" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Register
                        </button>

                    </div>
                </div>
            </div>
        </section>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            const message = message;
            if (message) {
                const toastLiveExample = document.getElementById('messageToast');
                const toast = new bootstrap.Toast(toastLiveExample);
                toast.show();
            }
        });
    </script>
</body>
</html>