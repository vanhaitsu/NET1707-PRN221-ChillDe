@model IMS.Models.Entities.Account

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Account Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">User Details</h1>
        <div class="card">
            <div class="card-body">
                <p class="card-text"><strong>Full Name:</strong> @Model.FullName</p>
                <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                <p class="card-text"><strong>Password:</strong> @Model.Password</p>
                <p class="card-text"><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                <p class="card-text"><strong>Date of Birth:</strong> @Model.DOB?.ToString("yyyy-MM-dd")</p>
                <p class="card-text"><strong>Gender:</strong> @Model.Gender</p>
                <p class="card-text"><strong>Address:</strong> @Model.Address</p>
                <p class="card-text"><strong>Role Name:</strong> @Model.Role?.Name</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
